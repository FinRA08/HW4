<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.HelloController" spacing="5">
    <padding>
        <Insets bottom="6" left="6" right="6" top="6"/>
    </padding>
    <MenuBar>
        <Menu text="File">
            <Menu text="Exit" onAction="#menuExitSelect"/>
        </Menu>
    </MenuBar>
    <TextArea fx:id="messagesArea" VBox.vgrow="ALWAYS" editable="false"/>
    <HBox spacing="5">
        <TextField fx:id="messageField" HBox.hgrow="ALWAYS"/>
        <Button text="Check" onAction="#clickSendButton" defaultButton="true"/>
    </HBox>
</VBox>
